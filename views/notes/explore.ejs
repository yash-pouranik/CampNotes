<style>
  .explore-container {
    max-width: 1100px;
    margin: 50px auto;
    margin-top: 0px;
    padding: 20px;
  }

  .explore-heading {
    text-align: center;
    font-size: 2.4rem;
    color: #1a1a3d;
    margin-bottom: 40px;
    position: relative;
  }

  .explore-heading::after {
    content: '';
    display: block;
    width: 80px;
    height: 3px;
    background-color: #00d80b;
    margin: 12px auto 0;
    border-radius: 6px;
  }
.note-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(260px, 1fr));
  gap: 25px;
}

/* Tablets and small laptops */
@media (max-width: 900px) {
  .note-grid {
    grid-template-columns: repeat(2, 1fr);
  }
}

/* Phones (landscape & portrait) */
@media (max-width: 600px) {
  .note-grid {
    grid-template-columns: repeat(2, 1fr);
  }
}

/* Very small phones */
@media (max-width: 400px) {
  .note-grid {
    grid-template-columns: 1fr;
  }

  .note-card {
    padding: 12px !important;
  }

  h3 {
    font-size: 1rem !important;
    margin: 8px 0 4px;
  }

  p, time {
    font-size: 12px !important;
  }

  .view-link {
    font-size: 0.75rem !important;
    padding: 6px 12px !important;
  }

  .note-card .tags {
    display: none;
  }
}

  .note-card {
    background: #ffffff;
    padding: 22px;
    border-radius: 16px;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.06);
    transition: all 0.3s ease;
  }

  .note-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 24px rgba(0, 0, 0, 0.1);
  }

  .note-card h3 {
    font-size: 1.2rem;
    color: #2b2b6b;
    margin-bottom: 10px;
  }

  .note-card p {
    font-size: 0.9rem;
    color: #333;
    margin: 6px 0;
  }

  .note-card .tags {
    margin-top: 10px;
  }

  .note-card .tag {
    display: inline-block;
    background-color: #d4f3e1;
    color: #1e7b3c;
    padding: 4px 10px;
    border-radius: 50px;
    font-size: 0.7rem;
    margin: 2px 4px 0 0;
  }

  .note-card time {
    display: block;
    font-size: 0.8rem;
    color: #888;
    margin-top: 10px;
  }

  .view-link {
    display: inline-block;
    margin-top: 15px;
    color: #fff;
    background: linear-gradient(to right, #2b2b6b, #4e4ea6);
    padding: 10px 18px;
    border-radius: 8px;
    text-decoration: none;
    font-size: 0.85rem;
    font-weight: 500;
    transition: background 0.3s ease;
  }

  .view-link:hover {
    background: linear-gradient(to right, #1f1f4d, #3a3a7e);
  }

  .search-filter-form {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 10px;
  margin-bottom: 30px;
}

.search-filter-form input,
.search-filter-form select,
.search-filter-form button {
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 8px;
  font-size: 1rem;
}
.search-filter-form button {
  background: #2b2b6b;
  color: #fff;
  cursor: pointer;
}



</style>




<div class="explore-container">
  <h1 class="explore-heading">Explore All Notes</h1>

  <% if (notes.length === 0) { %>
    <p style="text-align: center; font-size: 1.1rem; color: #666;">No notes uploaded yet.</p>
  <% } else { %>
    <form method="GET" action="/explore" class="search-filter-form">
        <input type="text" name="q" placeholder="Search by title or subject..." value="<%= typeof query !== 'undefined' ? query : '' %>">

        <select name="tag">
            <option value="">All Tags</option>
            <% allTags.forEach(t => { %>
            <option value="<%= t %>" <%= tag === t ? 'selected' : '' %>><%= t %></option>
            <% }) %>
        </select>

        <button type="submit">Search</button>
    </form>

    <div class="note-grid">
      <% notes.forEach(note => { %>
        <div class="note-card">
          <h3><%= note.title %></h3>
          <p><strong>Subject:</strong> <%= note.subject || 'N/A' %></p>
          <p style="display: flex; align-items: center;"><strong>Uploaded by:</strong> <%= note.uploadedBy?.username || "Unknown" %> &nbsp;

              <% if (note.uploadedBy.moderator_YASH_09) { %>
                <img src="/images/blueCheckmark.svg" alt="Moderator" style="all: unset; width: 23px;">
              <% } else if (note.uploadedBy.liwfijssouhfns) { %>
                <img src="/images/icons8-checkmark.svg" alt="Developer" style="all: unset; width: 23px;">
              <% } else if (note.uploadedBy.verified) { %>
                <span style="color: green; font-size: 0.8rem;">âœ”</span>
              <% } %>
            
          </p>
          <time><%= note.uploadedAt.toDateString() %></time>

          <% if (note.tags?.length) { %>
            <div class="tags">
              <% note.tags.slice(0, 3).forEach(tag => { %>
                <span class="tag"><%= tag %></span>
              <% }) %>
              <% if (note.tags.length > 3) { %>
                <span class="tag">+<%= note.tags.length - 3 %></span>
              <% } %>
            </div>
          <% } %>

          <a href="/notes/<%= note._id %>" class="view-link">ðŸ“„ View Note</a>
        </div>
      <% }) %>
    </div>
  <% } %>
</div>
