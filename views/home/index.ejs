<section class="top-contributors">
  <h2>Meet Our Top Contributors</h2>
  <div class="contributors">
    <% if (topContributors && topContributors.length) { %>
      <% topContributors.forEach(contributor => { %>
        <div class="contributor" data-aos="flip-up">
          <img src="<%= contributor.avatar || '/images/dummy_profile.avif' %>" alt="User Avatar">
          <h4><%= contributor.name || contributor.username %></h4>
          <p><%= contributor.uploadCount %> uploads â€¢ <%= contributor.course || 'N/A' %></p>
        </div>
      <% }) %>
    <% } else { %>
      <p>No contributors yet.</p>
    <% } %>
  </div>
</section>


