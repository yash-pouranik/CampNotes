
<style>
  .profile-container {
    max-width: 900px;
    margin: 3rem auto;
    padding: 2rem;
    border-radius: 16px;
    background-color: #ffffff;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    font-family: 'Segoe UI', sans-serif;
  }

  .profile-header {
    text-align: center;
    margin-bottom: 2rem;
  }

  .profile-header h2 {
    font-size: 2rem;
    color: #222;
  }

  .profile-data {
    text-align: center;
    color: #555;
    font-size: 1rem;
  }

  .stats {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    margin: 2rem 0;
    gap: 1rem;
  }

  .stat-card {
    background-color: #f3f4f6;
    padding: 1rem 2rem;
    border-radius: 12px;
    min-width: 120px;
    text-align: center;
    font-weight: 600;
    color: #333;
  }

  .notes-list {
    margin-top: 2rem;
  }

  .notes-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
    gap: 1.5rem;
  }

  .note-card {
    background-color: #e4e4e491;
    padding: 1rem;
    border-radius: 12px;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
    text-align: center;
  }

  .note-preview {
    width: 100%;
    max-height: 250px;
    object-fit: contain;
    margin-bottom: 0.5rem;
    border-radius: 8px;
  }

  .note-link {
    font-size: 0.9rem;
    word-break: break-word;
    color: #0a66c2;
    text-decoration: none;
  }

  .note-link:hover {
    text-decoration: underline;
  }

  .back-link {
    display: block;
    margin-top: 3rem;
    text-align: center;
    color: #0a66c2;
    font-weight: bold;
    text-decoration: none;
  }

  .back-link:hover {
    text-decoration: underline;
  }

  .social-form {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    max-width: 400px;
    background: #f8f9fa;
    padding: 1rem;
    border-radius: 10px;
  }
  .social-form input {
    padding: 0.6rem;
    border-radius: 8px;
    border: 1px solid #ccc;
  }
  .social-form button {
    background: #2563eb;
    color: white;
    padding: 0.6rem;
    border: none;
    border-radius: 8px;
    cursor: pointer;
  }
  .social-form button:hover {
    background: #1d4ed8;
  }



  @media screen and (max-width: 600px) {
    .profile-header h2 {
      font-size: 1.5rem;
    }

    .stat-card {
      padding: 0.8rem 1.5rem;
    }
  }

  .operations{
    position: relative;
    left: 1rem;
  }
</style>

<div class="profile-container">
  <div class="profile-header">
    <h2 style="display: flex; align-items: center !important; justify-content: center;">
      <%= user.username %>
            <% if (user.roles.isModerator) { %>
              <img src="/images/blueCheckmark.svg" alt="Moderator" style="all: unset; width: 30px;">
            <% } else if (user.roles.isDev) { %>
              <img src="/images/icons8-checkmark.svg" alt="Developer" style="all: unset; width: 20px;">
            <% } else if (user.verified) { %>
              <span style="color: green; font-size: 0.8rem;">‚úî</span>
            <% } %>
            <% if (currUser && currUser._id.toString() === user._id.toString()) { %>
            <div class="operations">
              <a href="/profile/<%= user._id %>/edit" class="edit-btn">Edit</a>
            </div>
<% } %>

    </h2>
    <div class="profile-data"><%= user.email %></div>
  </div>

  <div class="stats">
    <div class="stat-card">üì§ Uploaded: <%= user.uploaded %></div>
    
  </div>

<div class="profile-section">
  <h2>Social Links</h2>

  <% if (user.socialLinks?.linkedin || user.socialLinks?.github) { %>
    <% if (user.socialLinks?.linkedin) { %>
      <p>üîó LinkedIn: <a href="<%= user.socialLinks.linkedin %>" target="_blank"><%= user.socialLinks.linkedin %></a></p>
    <% } else { %>
      <p>üîó LinkedIn: Not added</p>
    <% } %>

    <% if (user.socialLinks?.github) { %>
      <p>üíª GitHub: <a href="<%= user.socialLinks.github %>" target="_blank"><%= user.socialLinks.github %></a></p>
    <% } else { %>
      <p>üíª GitHub: Not added</p>
    <% } %>

  <% } else { %>
    <p style="color: gray;">No social links yet. Add via</p>
  <% } %>
</div>



  <div class="notes-list">
    <h3>Uploaded Notes</h3>
    <% if (user.notes.length > 0) { %>
      <div class="notes-grid">
        <% user.notes.forEach(note => { %>
            <div class="note-card">
                <% if (note.fileUrl.match(/\.(jpg|jpeg|png|webp|gif)$/i)) { %>
                <img class="note-preview" src="<%= note.fileUrl %>" alt="Note Preview">
                <% } else if (note.fileUrl.match(/\.pdf$/i)) { %>
                <iframe class="note-preview" src="<%= note.fileUrl %>" type="application/pdf"></iframe>
                <% } else { %>
                <p>Preview not available</p>
                <% } %>

                <div style="font-weight: bold; margin-top: 0.5rem;"><%= note.title %></div>
                <div style="font-size: 0.8rem; color: #666;"><%= note.subject %> ‚Äî <%= note.course %></div>

                <a href="/notes/<%= note._id %>" class="note-link">View Note</a>
            </div>
            <% }) %>

      </div>
    <% } else { %>
      <p style="text-align: center; color: #888;">No notes uploaded yet.</p>
    <% } %>
  </div>
  <% if(!user.verification.verified) {%>
    <a href="/verify" class="back-link">‚Üê Verify Here</a>
  <% } %>

  <a href="/" class="back-link">‚Üê Back to Home</a>
</div>
